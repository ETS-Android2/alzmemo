<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.main.alz2.MenuActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/welcomeBg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HELLO"
                android:textSize="28dp"
                android:textColor="#16a085"
                android:id="@+id/textView3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:textStyle="bold"
                android:id="@+id/name"
                android:textColor="#16a085"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="right">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JANUARY 9 2016"
                android:textSize="18dp"
                android:drawableLeft="@drawable/minicalendar"
                android:drawablePadding="20dp"
                android:id="@+id/txtDate"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:03"
                android:textSize="18dp"
                android:id="@+id/txtTime"
                android:textColor="#fff"/>
        </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRelation"
            android:layout_marginRight="10dp"
            android:background="@drawable/btnmyrelatives2"
            android:onClick="startManageRelationsActivity"
            android:allowUndo="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMemory"
            android:background="@drawable/btnmymemorywallet2"
            android:textAlignment="textEnd"
            android:onClick="startMemoryWalletActivity" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCal"
            android:background="@drawable/btnmycalendar2"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"
            android:onClick="openCalendar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSettings"
            android:background="@drawable/btnmysettings2"
            android:layout_gravity="center_horizontal"
            android:onClick="startUserPrefActivity" />
        </LinearLayout>

</LinearLayout>
