<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bgcalendar"
    tools:context="com.pdcare.main.pdcare.EventSummary">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Title here"
        android:id="@+id/summaryTitle"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="time and date here"
        android:id="@+id/summaryDateTime"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/icontime"
        android:drawablePadding="20dp"
        android:textColor="#fff"
        android:textSize="22dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="location here"
        android:id="@+id/summaryLocation"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:drawableLeft="@drawable/iconlocation"
        android:drawablePadding="20dp"
        android:textSize="22dp"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="reminder here"
        android:textSize="22dp"
        android:drawableLeft="@drawable/iconnotification"
        android:drawablePadding="20dp"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:id="@+id/summaryReminder"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="from relative"
        android:id="@+id/summaryFrom"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:textSize="22dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnyes"
            android:textSize="18dp"
            android:textColor="#fff"
            android:drawableLeft="@drawable/iconedit"
            android:paddingLeft="15dp"
            android:layout_alignParentBottom="true"
            android:text="EDIT THIS EVENT"
            android:id="@+id/editBtn"/>
    </RelativeLayout>


</LinearLayout>